[Unit]
Description=WhatsApp Bot FastAPI Application (TEST Mode)
After=network.target

[Service]
Type=simple
User=your-username
WorkingDirectory=/path/to/whatsapp-bot
Environment="PATH=/path/to/venv/bin"
Environment="ENVIRONMENT=test"
ExecStart=/path/to/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target






